<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:background="#24252f"
    tools:context=".MainActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/idExoPlayerVIew"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:controller_layout_id="@layout/custom_controller"
        app:resize_mode="fill">
    </com.google.android.exoplayer2.ui.PlayerView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout2"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_below="@id/idExoPlayerVIew"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anh Hoàn và những câu chuyện buồn quá khứ"
        android:id="@+id/name2"
        android:layout_below="@id/layout2"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="visible"
        android:lines="2"
        android:textSize="20dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/layout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name2"
                android:layout_marginLeft="5dp"
                android:text="100.000 lượt xem"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9 thg 1, 2022"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
        android:id="@+id/layout4"
        android:layout_below="@id/layout3"
    android:layout_marginLeft="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá:"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingbar"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#8685ef"
            android:isIndicator="false"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:background="#24252f"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_below="@id/layout4"
        android:layout_marginTop="10dp"
        android:background="#777777"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txttacgia"
        android:layout_below="@id/line"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mai Duy"
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500N người đăng kí"
                android:textColor="@color/white"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:layout_below="@id/txttacgia"
        android:layout_marginTop="10dp"
        android:background="#777777"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:id="@+id/txv"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svdes"
        android:layout_below="@id/txv">
    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:layout_width="match_parent"
        android:id="@+id/des"
        android:layout_below="@id/txv"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        app:trimExpandedText="@string/read_more"
        app:trimCollapsedText="@string/read_more"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="tao thề với m là thằng lồn Bình xàm vcl luôn á thề.....
        chắc nhờ anh Huy đến gặp anh bình cái quá. đấm vỡ mồm mầy giờ nè hoàn"
        app:trimMode="trimModeLength"
        app:trimLength="40"
        app:colorClickableText="@color/white"/>
    </ScrollView>
</RelativeLayout>